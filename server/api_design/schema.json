{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Response Schema",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "error"]
    },
    "message": {
      "type": ["string", "null"]
    },
    "data": {
      "oneOf": [{ "type": "object" }, { "type": "array" }, { "type": "null" }]
    }
  },
  "required": ["status", "data"],
  "allOf": [
    {
      "if": {
        "properties": { "status": { "const": "error" } }
      },
      "then": {
        "required": ["message"]
      }
    }
  ],
  "additionalProperties": false
}
