{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Response Schema",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "status": { "const": "success" },
        "message": { "type": ["string", "null"] },
        "data": {
          "oneOf": [
            { "type": "object" },
            { "type": "array" },
            { "type": "null" }
          ]
        }
      },
      "required": ["status", "data"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "status": { "const": "error" },
        "message": { "type": ["string", "null"] },
        "data": { "type": "null" }
      },
      "required": ["status", "message", "data"],
      "additionalProperties": false
    }
  ]
}
